<!-- admin.handlebars -->

<h2>Reviews</h2>
<h2>Reviews</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">_id</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each reviews}}
      <tr id="review-box">
        <th scope="row">1</th>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td><a href="#" id="delete-review" data-review-id="{{this._id}}" onClick='deleting()'>Delete</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>
